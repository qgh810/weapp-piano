/* components/button-offset-control/index.wxss */

.button-offset-control-container {
  position: relative;
  overflow: hidden;
}

.button-offset-control-container .highlight {
  position: absolute;
  left: 0;
  top: 0;
  width: 100px;
  height: 100%;
  background: transparent;
  z-index: 1;
  box-shadow: 0 0 0 100vw rgba(0,0,0,0.6);
}