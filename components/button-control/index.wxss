/* components/button-control/index.wxss */
.button-control-container {
  width: 100%;
  height: 20vh;
  background: #000;
  padding: 5vh 20vw;
  box-sizing: border-box;
}

.button-control-container .size-control {
  position: absolute;
  top: 5vh;
  width: 10vh;
  height: 10vh;
  line-height: 10vh;
  background: red;
  text-align: center;
  font-size: 3vw;
  color: #fff;
  font-weight: bold;
  border-radius: 50%;
  display: none;
}

.button-control-container .size-control.add {
  left: 15vw;
}

.button-control-container .size-control.subtract {
  right: 15vw;
}