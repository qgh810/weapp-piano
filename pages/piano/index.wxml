<!-- 钢琴页面 -->
<view class="piano-root">
  <view class="piano">
    <button
      wx:for="{{buttons}}"
      wx:key="key"
      class="button {{item.type}}"
      hover-class="button-hover"
      style="{{item.blackStyle}}"
      data-name="{{ item.name }}"
      hover-start-time="{{0}}"
      bindtouchstart="onButtonTouchstart"
      bindtouchend="onButtonTouchend"
    >
    </button>
  </view>
</view>