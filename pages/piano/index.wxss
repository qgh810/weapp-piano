/* pages/game/index.wxss */
.piano-root .piano {
  text-align: right;
  margin-left: 25%;
  border-left: 1px solid #ccc;
}
.piano-root .button {
  border-radius: 0;
  box-sizing: border-box;
} 
.piano-root .button:after {
  display: none;
}
.piano-root .white {
  border-bottom: 1px solid #ccc;
  background: #ffffff;
  height: 40px;
}
.piano-root .white:first-child {
  border-top: 1px solid #ccc;
}
.piano-root .black {
  height: 20px;
  width: 50%;
  background: #000000;
  position: absolute;
  right: 0;
  top: 30px;
  z-index: 1;
}