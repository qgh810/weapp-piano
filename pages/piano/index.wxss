.piano-root {
  position: relative;
  width: 100%;
  height: 100%;
}

.adContainer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 50vh;
}

/* 钢琴架样式 */
.piano-root .piano-body {
  position: relative;
  width: 100%;
  height: 60vw;
  overflow: hidden;
  z-index: 1;
  box-shadow: 0 0 4vw 1vw #191919;
  /* background: #191919; */
}

.piano-root .piano-body .board1 {
  position: absolute;
  width: 60vw;
  height: 60vw;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  background: #191919;
}

.piano-root .piano-body .board2 {
  position: absolute;
  top: 30vw;
  left: 0;
  width: 100vw;
  height: 40vw;
  border-top-right-radius: 20vw;
  background: #191919;
}
.piano-root .piano-body .board3 {
  position: absolute;
  top: 27vw;
  left: 43vw;
  width: 20vw;
  height: 20vw;
  background: #191919;
}
.piano-root .piano-body .board4 {
  background: green;
  position: absolute;
  top: 0vw;
  left: 60vw;
  width: 30vw;
  height: 30vw;
  background: white;
  border-radius: 3vw;
}
/* 按键部分样式 */
.piano-root .buttons-container {
  position: relative;
  width: 100%;
  background: #191919;
}
