.piano-root {
  position: relative;
  width: 100%;
  height: 100%;
}

.adContainer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 50vh;
}

/* 钢琴架样式 */
.piano-root .piano-body {
  position: relative;
  width: 100%;
  height: 60vw;
  overflow: hidden;
  z-index: 1;
  box-shadow: 0 0 4vw 1vw #191919;
  /* background: #191919; */
}

.piano-root .piano-body .board1 {
  position: absolute;
  width: 60vw;
  height: 60vw;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  background: #191919;
}

.piano-root .piano-body .board2 {
  position: absolute;
  top: 30vw;
  left: 0;
  width: 100vw;
  height: 40vw;
  border-top-right-radius: 20vw;
  background: #191919;
}
.piano-root .piano-body .board3 {
  position: absolute;
  top: 27vw;
  left: 43vw;
  width: 20vw;
  height: 20vw;
  background: #191919;
}
.piano-root .piano-body .board4 {
  background: green;
  position: absolute;
  top: 0vw;
  left: 60vw;
  width: 30vw;
  height: 30vw;
  background: white;
  border-radius: 3vw;
}
/* 按键部分样式 */
.piano-root .piano-buttons {
  position: relative;
  margin: 0 auto;
  width: auto;
  height: 20vh;
  background: #191919;
  padding-top: 4px;
  padding-bottom: 1vw;
  box-sizing: border-box;
  overflow: hidden;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  line-height: 0;
  border-bottom-left-radius: 3vw;
  border-bottom-right-radius: 3vw;
  overflow: hidden;
  box-sizing: border-box;
}

.piano-root .piano-buttons .button {
  position: relative;
}
.piano-root .piano-buttons .button.white {
  display: inline-block;
  height: 100%;
  border-radius: 0;
  width: 6.5vw;
  height: 100%;
  margin: 0 1px;
  background: white;
  border-bottom-left-radius: 1vw;
  border-bottom-right-radius: 1vw;
  overflow: hidden;
  text-align: bottom;
}

.piano-root .piano-buttons .button .text {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  color: #ccc;
  font-size: 3vw;
  line-height: 6vw;
}

.piano-root .piano-buttons .button.black {
  position: relative;
  display: inline-block;
  width: 0;
  height: 60%;
  vertical-align: top;
  z-index: 1;
}

.piano-root .piano-buttons .button.black::after {
  position: absolute;
  content: '';
  background: #000;
  width: 4.4vw;
  border: 2px solid #000;
  border-top: 0;
  height: 100%;
  transform: translate(-50%, 0);
}

.piano-root .piano-buttons .button.white:active {
  background:#3ebdc9;
}

.piano-root .piano-buttons .button.black:active::after {
  background:#3ebdc9;
}