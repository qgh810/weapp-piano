/* pages/game/index.wxss */
.piano-root {
  width: 100%;
  height: 100%;
  overflow: auto;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.piano-root .piano {
  width: 70%;
  position: relative;
  /* text-align: right;
  margin-left: 25%; */
  border-left: 1px solid #ccc;
}
.piano-root .button {
  border-radius: 0;
  box-sizing: border-box;
} 
.piano-root .button:after {
  display: none;
}
.piano-root .white {
  border-bottom: 1px solid #ccc;
  background: #ffffff;
  height: 6vh;
}
.piano-root .button.white.button-hover {
  background: rgba(255, 0, 0, 0.1);
}
.piano-root .white:first-child {
  border-top: 1px solid #ccc;
}
.piano-root .black {
  height: 3vh;
  width: 60%;
  background: #000000;
  position: absolute;
  right: 0;
  top: 30px;
  z-index: 1;
}
.piano-root .button.black.button-hover {
  background: rgb(50, 50, 50);
}